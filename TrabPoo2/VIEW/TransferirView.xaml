<Window x:Class="TrabPoo2.Views.TransferirView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Realizar Transferência" Height="500" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F4F8">
        <Border Background="White" Margin="40" CornerRadius="10" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="Gray" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="TRANSFERÊNCIA" FontSize="20" FontWeight="Bold" Foreground="#003366" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Sua Conta (Origem):" Foreground="#003366" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cbContaOrigem" Height="30" Margin="0,0,0,15" DisplayMemberPath="Numero"/>

                <Separator Margin="0,0,0,15"/>

                <TextBlock Text="DADOS DO DESTINATÁRIO:" Foreground="#6699CC" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock Text="Agência Destino:" Foreground="#003366"/>
                <TextBox x:Name="txtAgenciaDestino" Height="25" Margin="0,0,0,10"/>

                <TextBlock Text="Número Conta Destino:" Foreground="#003366"/>
                <TextBox x:Name="txtNumeroDestino" Height="25" Margin="0,0,0,15"/>

                <TextBlock Text="Valor (R$):" Foreground="#003366" FontWeight="Bold"/>
                <TextBox x:Name="txtValor" Height="30" Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="CONFIRMAR" Width="100" Height="35" Background="#0000CC" Foreground="White" FontWeight="Bold" Margin="0,0,10,0" Click="BtnConfirmar_Click"/>
                    <Button Content="CANCELAR" Width="100" Height="35" Background="Gray" Foreground="White" Click="BtnCancelar_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>