<Window x:Class="TrabPoo2.Views.CriarContaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Abrir Nova Conta" Height="300" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#F0F4F8">
        <Border Background="White" Margin="30" CornerRadius="10" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="Gray" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="NOVA CONTA" FontSize="18" FontWeight="Bold" Foreground="#003366" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Selecione o Tipo:" Foreground="#003366" Margin="0,0,0,5"/>
                <ComboBox x:Name="cbTipoConta" Height="30" Margin="0,0,0,20" SelectedIndex="0">
                    <ComboBoxItem Content="Conta Corrente"/>
                    <ComboBoxItem Content="Conta Poupança"/>
                </ComboBox>

                <TextBlock Text="*O número da conta será gerado automaticamente." FontSize="10" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="CRIAR" Width="100" Height="35" Background="#0000CC" Foreground="White" FontWeight="Bold" Margin="0,0,10,0" Click="BtnCriar_Click"/>
                    <Button Content="CANCELAR" Width="100" Height="35" Background="Gray" Foreground="White" Click="BtnCancelar_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>