<Window x:Class="TrabPoo2.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard - UVV Fintech" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F4F8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#003366" Padding="20">
            <StackPanel>
                <TextBlock x:Name="txtBemVindo" Text="Bem-vindo, Usuário" Foreground="White" FontSize="16" Margin="0,0,0,30" TextWrapping="Wrap"/>

                <Border Background="#004080" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Conta Corrente" Foreground="#AACCEE" FontSize="12"/>
                        <TextBlock x:Name="txtSaldoCC" Text="R$ 0,00" Foreground="White" FontSize="20" FontWeight="Bold"/>
                        <TextBlock x:Name="txtNumCC" Text="Ag: 001 CC: 00000" Foreground="#AACCEE" FontSize="10"/>
                    </StackPanel>
                </Border>

                <Border Background="#004080" CornerRadius="5" Padding="10" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Poupança" Foreground="#AACCEE" FontSize="12"/>
                        <TextBlock x:Name="txtSaldoCP" Text="R$ 0,00" Foreground="White" FontSize="20" FontWeight="Bold"/>
                        <TextBlock x:Name="txtNumCP" Text="Ag: 001 CP: 00000" Foreground="#AACCEE" FontSize="10"/>
                    </StackPanel>
                </Border>

                <Button Content="Sair" Background="#CC0000" Foreground="White" Height="30" Click="BtnSair_Click" Cursor="Hand"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Operações Rápidas" FontSize="18" FontWeight="Bold" Foreground="#003366" Margin="0,0,0,15"/>

            <WrapPanel Grid.Row="1" Margin="0,0,0,15">

                <Button Content="DEPOSITAR" Width="120" Height="80" Margin="0,0,15,15" 
                        Background="White" BorderBrush="#003366" Foreground="#003366" FontWeight="Bold" 
                        Click="BtnDepositar_Click" Cursor="Hand"/>

                <Button Content="SACAR" Width="120" Height="80" Margin="0,0,15,15" 
                        Background="White" BorderBrush="#003366" Foreground="#003366" FontWeight="Bold" 
                        Click="BtnSacar_Click" Cursor="Hand"/>

                <Button Content="TRANSFERIR" Width="120" Height="80" Margin="0,0,15,15" 
                        Background="White" BorderBrush="#003366" Foreground="#003366" FontWeight="Bold" 
                        Click="BtnTransferir_Click" Cursor="Hand"/>

                <Button Content="EXTRATO" Width="120" Height="80" Margin="0,0,15,15" 
                        Background="White" BorderBrush="#003366" Foreground="#003366" FontWeight="Bold" 
                        Click="BtnExtrato_Click" Cursor="Hand"/>

                <Button Content="NOVA CONTA" Width="120" Height="80" Margin="0,0,15,15" 
                        Background="#E6F2FF" BorderBrush="#003366" Foreground="#003366" 
                        Click="BtnNovaConta_Click" Cursor="Hand"/>

                <Button Width="120" Height="80" Margin="0,0,15,15" 
                        Background="#E6F2FF" BorderBrush="#003366" Foreground="#003366" FontWeight="Bold"
                        Click="BtnPatrimonio_Click" Cursor="Hand">  
                    <TextBlock Text="PATRIMÔNIO (SQL)" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>

            </WrapPanel>

            <TextBlock Grid.Row="2" Text="Últimas Movimentações" FontSize="14" FontWeight="Bold" Foreground="#003366" VerticalAlignment="Top" Margin="0,10,0,0"/>
            <DataGrid x:Name="gridTransacoes" Grid.Row="2" Margin="0,35,0,0" AutoGenerateColumns="False" IsReadOnly="True" Background="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Data" Binding="{Binding DataHora, StringFormat=dd/MM HH:mm}" Width="120"/>
                    <DataGridTextColumn Header="Conta" Binding="{Binding ContaNumero}" Width="100"/>
                    <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}" Width="*"/>
                    <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat=C2}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>