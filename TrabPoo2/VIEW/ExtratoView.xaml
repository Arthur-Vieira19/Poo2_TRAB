<Window x:Class="TrabPoo2.Views.ExtratoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Extrato - UVV Fintech" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F4F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="White" Padding="15" Margin="20,20,20,10" CornerRadius="5">
            <StackPanel>
                <Grid Margin="0,0,0,15">
                    <TextBlock Text="EXTRATO DE TRANSAÇÕES" FontSize="18" FontWeight="Bold" Foreground="#003366" HorizontalAlignment="Center"/>
                    <Button Content="Voltar" HorizontalAlignment="Left" Click="BtnVoltar_Click"/>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="De:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <DatePicker x:Name="dtInicio" Width="120" Margin="0,0,15,0"/>

                    <TextBlock Text="Até:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <DatePicker x:Name="dtFim" Width="120" Margin="0,0,15,0"/>

                    <Button Content="FILTRAR" Width="80" Background="#003366" Foreground="White" Click="BtnFiltrar_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <DataGrid x:Name="gridExtrato" Grid.Row="1" Margin="20,0,20,20" 
                  AutoGenerateColumns="False" IsReadOnly="True" Background="White"
                  BorderBrush="#CCCCCC" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Data/Hora" Binding="{Binding DataHora, StringFormat=dd/MM/yyyy HH:mm}" Width="140"/>
                <DataGridTextColumn Header="Conta" Binding="{Binding ContaNumero}" Width="100"/>
                <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}" Width="*"/>
                <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat=C2}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>